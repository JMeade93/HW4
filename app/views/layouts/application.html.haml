!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    -if !@current_user
      = button_to "Signup/Login", login_path, :method => :get, :id => 'login'
    -else
      = button_to "Logout", logout_path, :method => :delete, :id => 'logout'
    #main
      - if flash[:notice] {:class => flash_message}
        #notice.message= flash[:notice]
      - elsif flash[:warning] {:class => flash_message}
        #warning.message= flash[:warning]

      = yield
